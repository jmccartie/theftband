= form_for @show do |f|
  -if @show.errors.any?
    #error_explanation
      %h2= "#{pluralize(@show.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - @show.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :venue
    = f.text_field :venue
  .actions
    = f.submit 'Save'
